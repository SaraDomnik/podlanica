    </div>
    <!--MENU END-->
    <!--WEATHER APP + RESERVATION FORM-->
    <div class="weather-app" id="contact">
      <div id="lottie-animation" class="weather-app__animation"></div>
      <!--Weather app left side start-->
      <div
        class="weather-app__left"
        data-aos="fade-zoom-in"
        data-aos-easing="linear"
        data-aos-duration="1500"
      >
        <div class="weather-app__left--1 weather-object" data-value="5">
          <p class="weather-app__left--1--city" id="city">CITY</p>
          <p id="date">DATE</p>
        </div>

        <img
          src="img/weather-app--icons/SVG/01d.svg"
          alt="Weather icons"
          id="icon"
          class="weather-app__left--icon weather-object"
          data-value="-4"
        />
        <div class="weather-app__left--2 weather-object" data-value="3">
          <h3 class="weather-app__left--2--temp" id="temp">30</h3>
          <p id="description">Description</p>
        </div>
      </div>
      <!--Weather app left side end-->
      <!--Weather app form start-->
      <div
        class="weather-app__form--banner"
        data-aos="fade-up"
        data-aos-easing="linear"
        data-aos-duration="700"
        data-aos-offset="400"
      ></div>
      <div
        class="weather-app__form"
        data-aos="fade-up"
        data-aos-easing="linear"
        data-aos-duration="700"
      >
        <div class="weather-app__form--text">
          <h2><%=t('weather.reserve')%></h2>
          <p><%=t('weather.reservation-required')%></p>
        </div>
        <div class="weather-app__form--phone">
          <i class="weather-app__form--icon fas fa-mobile-alt"></i>
          <p>+386 41 338 612</p>
        </div>
        <div class="weather-app__form--location">
          <i class="weather-app__form--icon fas fa-map-marker-alt"></i>
          <p>
            <%=t('weather.port')%>, <br />6300 <%=t('weather.piran')%>, <br />
            <%=t('weather.slovenia')%>
          </p>
        </div>

        <div class="weather-app__form--time">
          <i class="weather-app__form--icon far fa-clock"></i>
          <p>
            <%=t('weather.open')%>: 12.30 - 19h, <br /><b
              ><%=t('weather.thuseday-closed')%>
            </b>
            <!-- <b>
              <%=t('weather.closed')%>
            </b> -->
          </p>
        </div>
      </div>
      <!--Weather app form end-->
      <!--Weather app right side start-->
      <div
        class="weather-app__right"
        data-aos="fade-zoom-in"
        data-aos-easing="linear"
        data-aos-duration="1700"
      >
        <h2
          class="weather-app__right--time weather-object"
          data-value="3"
          id="time"
        >
          Time
        </h2>
        <div class="weather-app__right--max weather-object" data-value="-5">
          <p>Max-Temp:</p>
          <p id="max-temp">Max</p>
        </div>
        <div class="weather-app__right--min weather-object" data-value="7">
          <p>Min-Temp:</p>
          <p id="min-temp">Min</p>
        </div>
      </div>
      <!--Weather app right side end-->
    </div>
    <!--WEATHER APP + RESERVATION FORM -->
    <!--ABOUT US-->
    <div class="about-us" id="about-us">
      <div class="about-us__content">
        <div class="about-us__content--heading-bg"></div>
        <img
          src="img/img1-1.jpg"
          alt="Restaurant owners"
          class="about-us__content--img"
          class="fishing-video__heading"
          data-aos="fade-right"
          data-aos-easing="linear"
          data-aos-duration="1500"
        />
        <h2 class="about-us__content--heading heading-2">
          <%=t('about-us.about-us')%>
        </h2>
        <div
          class="about-us__content--paragraph"
          class="fishing-video__heading"
          data-aos="fade-zoom-in"
          data-aos-easing="linear"
          data-aos-duration="1500"
        >
          <p><%=t('about-us.text-1')%></p>
          <p><%=t('about-us.text-2')%></p>
          <p><%=t('about-us.text-3')%></p>
        </div>
      </div>
    </div>
    <!--ABOUT US END-->
    <!--GALLERY START-->
    <div class="gallery" id="gallery">
      <div class="gallery__heading-bg"></div>
      <div
        class="gallery__heading"
        data-aos="fade-zoom-in"
        data-aos-easing="linear"
        data-aos-duration="1500"
      >
        <p><%=t('gallery.gallery')%></p>
      </div>
      <div class="swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          <!-- Slides -->
          <div data-background="/img/img9.jpg" class="swiper-slide swiper-lazy">
            <div class="swiper-lazy-preloader"></div>
          </div>
          <div
            data-background="/img/img10.jpg"
            class="swiper-slide swiper-lazy"
          >
            <div class="swiper-lazy-preloader"></div>
          </div>
          <div data-background="/img/img4.jpg" class="swiper-slide swiper-lazy">
            <div class="swiper-lazy-preloader"></div>
          </div>
          <div data-background="/img/img2.jpg" class="swiper-slide swiper-lazy">
            <div class="swiper-lazy-preloader"></div>
          </div>

          <div data-background="/img/img6.jpg" class="swiper-slide swiper-lazy">
            <div class="swiper-lazy-preloader"></div>
          </div>
          <div data-background="/img/img8.jpg" class="swiper-slide swiper-lazy">
            <div class="swiper-lazy-preloader"></div>
          </div>
          <div
            data-background="/img/img11.jpg"
            class="swiper-slide swiper-lazy"
          >
            <div class="swiper-lazy-preloader"></div>
          </div>
        </div>
        <!-- If we need pagination -->
        <div class="swiper-pagination"></div>

        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>

        <!-- If we need scrollbar -->
        <div class="swiper-scrollbar"></div>
      </div>
    </div>
    <!--GALLERY END-->
    <!--FOOTER START-->
    <footer class="footer" id="location">
      <div class="footer__container">
        <p class="footer__container--sp">
          Katarina Domnik s.p. ,<br />Ulica IX.korpusa 9,<br />6330
          Piran-Pirano, <br />Slovenia,<br />VAT ID: SI62405691
        </p>
        <!--Social media start-->
        <div class="footer__container--socialmedia">
          <!--Instagram-->
          <i class="footer__container--socialmedia--ig fab fa-instagram"></i>
          <!--Facebook-->
          <i
            class="footer__container--socialmedia--fb fab fa-facebook-square"
          ></i>
          <!--Tripadvisor-->
          <a
            target="_blank"
            href="https://www.tripadvisor.com/Restaurant_Review-g274876-d8701031-Reviews-Ladja_Podlanica-Piran_Slovenian_Istria_Slovenian_Littoral_Region.html"
            ><img
              src="Img/tripadvisor_icon.svg"
              class="footer__container--socialmedia--trip"
          /></a>
        </div>
        <!--Social media end-->
      </div>

      <!--Information start-->
      <div class="footer__location">
        <i class="footer__location--icon fas fa-map-marker-alt"></i>
        <div class="footer__location--text">
          <h3><%=t('navigation.location')%></h3>
          <p>
            <%=t('weather.port')%>, <br />
            6330 <%=t('weather.piran')%>, <%=t('weather.slovenia')%>
          </p>
        </div>
      </div>

      <div class="footer__contact">
        <i class="footer__contact--icon fas fa-mobile-alt"></i>
        <div class="footer__contact--text">
          <h3><%=t('navigation.contact')%></h3>
          <p>+386 41 338 612</p>
        </div>
      </div>

      <div class="footer__time">
        <i class="footer__time--icon far fa-clock"></i>
        <div class="footer__time--text">
          <h3><%=t('footer.opening-hours')%></h3>
          <p>
            <%=t('weather.open')%>: 13h - 20h, <br /><b
              ><%=t('weather.thuseday-closed')%>
            </b>
          </p>
        </div>
      </div>
      <!--Information end-->
      <!--Map start-->
      <div class="footer__map" id="map"></div>
      <!--Map end-->
    </footer>
    <!--FOOTER END -->
    <!--SCRIPTS START-->
    <!--Elements animation-->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <!--Lottie files-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.4/lottie.min.js"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <!--Swiper-->
    <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>
    <!--Weather app-->
    <script src="js/weather-app.js"></script>
    <!--Normal script-->
    <script src="js/script.js"></script>
    <!--Google Map-->
    <script
      async
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAOMRSckt288BdAN2l5LaqkbewTCAn6vj0&callback=initMap&v=weekly"
      async
    ></script>
    <!--SCRIPTS END-->
  </body>
