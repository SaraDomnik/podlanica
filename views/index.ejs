    <!--FISHING VIDEO START-->
    <div class="fishing-video">
      <div
        class="fishing-video__heading"
        data-aos="fade-zoom-in"
        data-aos-easing="linear"
        data-aos-duration="700"
      >
        <h2><%=t('fishing.text')%></h2>
        <p><%=t('fishing.text-2')%></p>
      </div>
      <video class="fishing-video__video" autoplay muted loop>
        <source src="video/Fishing-2-Comp-1.mp4" type="video/mp4" />
      </video>
    </div>
    <!--FISHING VIDEO END-->
    <!--MENU START-->
    <div class="menu" id="menu">
      <div class="menu__food">
        <h2 class="menu__food--h2">Menu</h2>
        <p class="menu__food--text"><%=t('menu.text')%></p>

        <div
          class="menu__food--apetizers"
          data-aos="fade-right"
          data-aos-easing="linear"
          data-aos-duration="800"
        >
          <h3><%=t('menu.apetizers')%></h3>

          <section>
            <p><%=t('menu.marinated-sardines')%></p>
            <span></span>
            <p>10€</p>
          </section>

          <section>
            <p><%=t('menu.bacala')%></p>
            <span></span>
            <p>10€</p>
          </section>

          <section>
            <p><%=t('menu.salty-fillets')%></p>
            <span></span>
            <p>10€</p>
          </section>
        </div>

        <div
          class="menu__food--main-dishes"
          data-aos="fade-right"
          data-aos-easing="linear"
          data-aos-duration="800"
        >
          <h3><%=t('menu.main-dishes')%></h3>

          <section>
            <p><%=t('menu.spaghetti')%></p>
            <span></span>
            <p>14€</p>
          </section>

          <section>
            <p>
              <%=t('menu.black-muscles')%> <br /><%=t('menu.in-white-souce')%>
            </p>
            <span></span>
            <p>8€</p>
          </section>
        </div>

        <div
          class="menu__food--fish"
          data-aos="fade-left"
          data-aos-easing="linear"
          data-aos-duration="800"
        >
          <h3><%=t('menu.fish')%></h3>

          <section>
            <p><%=t('menu.categorie-1')%></p>
            <span></span>
            <p>4,5€/100g</p>
          </section>
          <section>
            <p><%=t('menu.categorie-1-plus')%></p>
            <span></span>
            <p>5,5€/100g</p>
          </section>

          <section>
            <p><%=t('menu.categorie-2')%></p>
            <span></span>
            <p>3,5€/100g</p>
          </section>
        </div>

        <div
          class="menu__food--side-dishes"
          data-aos="fade-left"
          data-aos-easing="linear"
          data-aos-duration="900"
        >
          <h3><%=t('menu.side-dishes')%></h3>

          <section>
            <p><%=t('menu.sesonal-salad')%></p>
            <span></span>
            <p>3€</p>
          </section>
        </div>
        <div class="menu__food--button">
          <a href="#contact">
            <button class="menu__food--button--btn">
              <%=t('header.second-btn')%>
            </button>
          </a>
